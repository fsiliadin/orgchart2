{
  "compilerOptions": {
    "outDir": "../../public/app/",
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "composite": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["./*.ts", "./**/*.ts", "./*.vue", "./**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "files": [
    "app.ts",
  ],
  "exclude": ["node_modules"]
}
